@{
Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Form</title>
</head>
<body>
    <form action="@Url.Action("Pizza", "Home")" method="post">
        <label for="UserName">User Name</label>
        <input type="text" id="UserName" name="UserName" required/><br><br>

        <label for="UserAge">User Age</label>
        <input type="number" id="UserAge" name="UserAge" required/><br><br>

        <label for="UserAdress">User Address</label>
        <input type="text" id="UserAdress" name="UserAdress" required/><br><br>

        <label for="UserPhoneNumber">User Phone Number</label>
        <input type="text" id="UserPhoneNumber" name="UserPhoneNumber" required/><br><br>

        <div id="pizzaQuantity" style="display: none;">
            <label for="UserQ">How many pizzas do you want to order?</label>
            <input id="UserQ" type="number" name="UserQ" min="0" required/>
        </div>

        <input type="submit" value="Save" />
    </form>
    <script>
        document.getElementById("UserAge").addEventListener("input", function() {
            var age = parseInt(this.value);
            var pizzaQuantity = document.getElementById("pizzaQuantity");

            if (age > 16) {
                pizzaQuantity.style.display = "block";
            } else {
                pizzaQuantity.style.display = "none";
            }
        });
    </script>
</body>
</html>